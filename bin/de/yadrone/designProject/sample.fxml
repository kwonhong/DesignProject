<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="de.yadrone.designProject.Controller">
    <center>
        <HBox alignment="CENTER" spacing="5">
            <VBox alignment="CENTER" spacing="5">
                <Label text="Drone Video Stream"/>
                <ImageView fx:id="droneVideoStreamImageView"/>
            </VBox>
        </HBox>
    </center>


    <bottom>
        <VBox alignment="CENTER" spacing="15">
            <Button fx:id="connectDrone" alignment="center" text="Connect Drone"
                    onAction="#connectDrone"/>
            <Button fx:id="startVideoStream" alignment="center" text="Start Video Stream"
                    onAction="#startVideoStream"/>
        </VBox>
    </bottom>
</BorderPane>